<div class="container text-center mt-5 mb-5" style ="width: 30rem;">
  <h1> <%= @city.name %> page </h1>
  <hr>
  <p> Zip Code: <%= @city.zip_code %> </p>
  <hr>
  <h3>Gossip publiés dans cette ville</h3>
  <% @city.users.each do |user| %>
  <% user.gossips.each do |gossip|%>
  <div class="card-deck m-3 text-center">
    <div class="card" style="width: 19rem;">
      <div class="card-body">
        <h3 class="card-title"><%= gossip.title %></h3>
        <h6 class="card-subtitle mb-2 text-muted"><%= gossip.created_at %></h6>
        <p class="card-text"><%= gossip.content %></p>
        <div class="container">
           <%= link_to "  #{gossip.likes.length}  ", likes_path(gossip.id), class: "btn btn-secondary far fa-heart", method: :post %>
        </div>
        <%= link_to (gossip.user.first_name), profile_path(gossip.user.first_name), class: "btn btn-primary mr-1"%>
        <%= link_to ("Voir le potin"), gossip_path(gossip.id), class: "btn btn-primary ml-1"%>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
  <p>Lol astéroïde.</p>
</div>
