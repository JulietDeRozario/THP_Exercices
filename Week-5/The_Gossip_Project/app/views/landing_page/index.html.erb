
<div class="jumbotron">
  <h1 class="display-4">The Gossip Project</h1>
  <p class="lead">Plateforme de partage de potins générés aléatoirement pour l'instant.</p>
</div>

<% if params[:notice] == "gossip_saved" %>
<div class="container mx-auto">
  <div class="alert alert-success mx-auto text-center " style= "width: 30rem;" role="alert">
    <p>Ton potin a été enregistré !</p>
  </div>
</div>
<% end %>

<% if params[:notice] == "gossip_destroyed" %>
<div class="container mx-auto">
  <div class="alert alert-success mx-auto text-center " style= "width: 30rem;" role="alert">
    <p>Ton potin a été supprimé !</p>
  </div>
</div>
<% end %>

<% if params[:notice] == "success" %>
<div class="container mx-auto">
  <div class="alert alert-success mx-auto text-center " style= "width: 30rem;" role="alert">
    <p>Ton profil a été créé avec succès !</p>
  </div>
</div>
<% end %>

<% if params[:notice] == "login_success"%>
<div class="container mx-auto">
  <div class="alert alert-success mx-auto text-center " style= "width: 30rem;" role="alert">
    <p>Tu es bien connecté</p>
  </div>
</div>
<% end %>


<div class="container align-items-center text-center mt=5 mb=5">
  <h4>Créer un Gossip</h4>
  <%= link_to "Nouveau gossip", new_gossip_path, class: "btn btn-primary mr-1"%>
</div>

<div class="container align-items-center text-center">
  <hr>
  <h3>Les potins déjà en ligne :</h3>
  <div class="row">
    <% Gossip.all.each do |gossip| %>
    <div class="card-deck m-3 text-center">
      <div class="card" style="width: 19rem;">
        <div class="card-body">
          <h3 class="card-title"><%= gossip.title %></h3>
          <p>Nombre de commentaires: <%= gossip.comments.length %>
            <hr>
            <h6 class="card-subtitle mb-2 text-muted"><%= gossip.created_at %></h6>
            <p class="card-text"><%= gossip.content %></p>
            <%= link_to (gossip.user.first_name), profile_path(gossip.user.first_name), class: "btn btn-primary mr-1"%>
            <%= link_to ("Voir le potin"), gossip_path(gossip.id), class: "btn btn-primary ml-1"%>
            <div class="container">
              <%= link_to "  #{gossip.likes.length}  ", likes_path(gossip.id), class: "btn btn-secondary far fa-heart", method: :post %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
