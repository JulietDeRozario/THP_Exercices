<li id="task-<%= task.id %>">
  <%= check_box_tag :chuck, 1, task.status , data: { remote: true, url: task_path(task.id), params: {status: !task.status}.to_param, method: "put" } %>
  <%= "<p class=\"text-muted\">".html_safe if task.status %>
  <%= task.title  %>
  <% unless task.deadline.nil? %>
  , to read: <%= task.deadline.strftime('%D')  %>
  <% end %>
  <%= link_to task_path(task), method: :delete, remote: true do %>
  <%= fa_icon "trash", :class => 'trash-icon text-danger'%>
  <% end %>
  <% "</p>".html_safe if task.status %>
</li>
